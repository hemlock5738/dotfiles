let mapleader = "\<Space>"

inoremap jj <Esc>
nnoremap j gj
nnoremap k gk
nnoremap gj j
nnoremap gk k
nnoremap <C-h> ^
nnoremap <C-l> $
nnoremap <Leader>w :w<CR>
nnoremap <Leader>a ggVG
nnoremap <Leader>q :q<CR>
nnoremap <Esc><Esc> :nohl<CR>

set number
set expandtab
set tabstop=2
set autoindent
set hlsearch
set incsearch
set ignorecase
set smartcase
